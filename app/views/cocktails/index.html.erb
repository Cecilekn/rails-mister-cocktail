<div class="container">
  <h1>All our cocktails</h1>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <%= link_to (cocktail_path(cocktail)) do %>
        <div class="card">
          <p><%= cocktail.name %></p>
        </div>
          <%= cl_image_tag("efwdrnlyxvlxw90gnvdn",
                width: 400, height: 300, crop: :fill) %>
      <% end %>
    <% end %>
  </div>

  <%= link_to "Add Cocktail", new_cocktail_path, class: "btn btn-success my-3" %>
</div>

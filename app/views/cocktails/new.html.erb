<div class="container">
  <h1>Add a Cocktail :)</h1>
  <%= simple_form_for(@cocktail) do |f| %>
  <%= f.input :name %>
  <%= f.input :image_url %>
  <%= f.input :image_url_cache, as: :hidden %>
  <%= f.submit "Add Cocktail", class: "btn btn-success" %>
  <% end %>

  <%= link_to "Cancel", root_path, class: "btn btn-warning" %>
</div>

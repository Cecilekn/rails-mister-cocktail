<div class="container">
  <h1><%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %> of <%= dose.ingredient.name %> <%= link_to "(delete)", dose_path(dose), method: :delete  %></p>
  <% end %>

  <%= link_to "Back to List", root_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <h1>Enter a new Dose</h1>

  <%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient, prompt: "Choose an ingredient" %>
  <%= f.submit "Add Dose", class: "btn btn-primary" %>
  <% end %>
</div>
